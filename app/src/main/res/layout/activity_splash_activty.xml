<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_background"
    tools:context="com.example.entreprenur.mobileshop.activity.SplashActivity">


    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:translationX="-400px"
            android:id="@+id/android_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat= "@drawable/android"/>

        <ImageView
            android:translationX="-400px"
            android:id="@+id/ios_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat= "@drawable/ios"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:translationX="-400px"
            android:id="@+id/windows_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:srcCompat= "@drawable/microsoft"/>

    </LinearLayout>

</RelativeLayout>
